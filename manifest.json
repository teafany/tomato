{
    "manifest_version": 3,
    "name": "Pomodoro Timer",
    "version": "1.0",
    "description": "Pomodoro timer with a to-do list.",
    "action": {
      "default_icon": "images/tomato.png"
    },
    "permissions": ["storage", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "web_accessible_resources": [{
      "resources": ["video.html", "videos/gameplay.mp4"],
      "matches": ["<all_urls>"]
    }]
  }
  